<%= form_for @measures,url: measures_url,remote: true  do |f| %>
  <div class="field" style="margin-bottom: 20px">
    <h5 style="color:black">
      <%= f.label 'Name' %>
    </h5>
    <%= f.text_field :meas_name %>
  </div>
  <div class="field" style="margin-bottom: 20px">
    <h5 style="color:black">
      <%= f.label 'Grams' %>
    </h5>
    <%= f.text_field :grams %>
  </div>
  <div class="field" style="margin-bottom: 20px">
    <h5 style="color:black">
      <%= f.label 'Role' %>
    </h5>
    <%= f.text_field :meas_role %>
  </div>
  <%= f.submit 'Add' %>
<% end %>